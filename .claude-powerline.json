{
  "theme": "custom",
  "display": {
    "style": "minimal",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true },
          "git": { "enabled": true, "showSha": false },
          "model": { "enabled": true },
          "session": { "enabled": true, "type": "tokens" },
          "today": { "enabled": true, "type": "both" },
          "block": { "enabled": false, "type": "cost" },
          "tmux": { "enabled": false }
        }
      }
    ]
  },
  "colors": {
    "custom": {
      "directory": { "bg": "#2e3440", "fg": "#d8dee9" },
      "git": { "bg": "#3b4252", "fg": "#88c0d0" },
      "model": { "bg": "#434c5e", "fg": "#b48ead" },
      "session": { "bg": "#4c566a", "fg": "#8fbcbb" },
      "today": { "bg": "#5e81ac", "fg": "#eceff4" },
      "block": { "bg": "#81a1c1", "fg": "#2e3440" },
      "tmux": { "bg": "#a3be8c", "fg": "#2e3440" }
    }
  },
  "budget": {
    "session": { "warningThreshold": 80 },
    "today": { "amount": 50, "warningThreshold": 80 }
  }
}
