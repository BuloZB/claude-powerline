{
  "theme": "custom",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true },
          "git": { "enabled": true, "showSha": false },
          "model": { "enabled": true },
          "session": { "enabled": true, "type": "tokens" },
          "context": { "enabled": true }
        }
      },
      {
        "segments": {
          "tmux": { "enabled": false },
          "metrics": { 
            "enabled": false,
            "showResponseTime": true,
            "showDuration": true,
            "showMessageCount": true,
            "showCostBurnRate": true,
            "showTokenBurnRate": true
          }
        }
      }
    ]
  },
  "colors": {
    "custom": {
      "directory": { "bg": "#2a2a2a", "fg": "#e0e0e0" },
      "git": { "bg": "#3a3a3a", "fg": "#d0d0d0" },
      "model": { "bg": "#4a4a4a", "fg": "#c0c0c0" },
      "session": { "bg": "#5a5a5a", "fg": "#b0b0b0" },
      "tmux": { "bg": "#8a8a8a", "fg": "#2a2a2a" },
      "context": { "bg": "#6a6a6a", "fg": "#ffffff" },
      "metrics": { "bg": "#565656", "fg": "#e5e5e5" }
    }
  },
  "budget": {
    "session": { "warningThreshold": 80 }
  }
}